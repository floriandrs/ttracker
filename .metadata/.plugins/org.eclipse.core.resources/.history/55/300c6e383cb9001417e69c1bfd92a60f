package com.slart.ttracker;

import java.util.HashMap;
import java.util.Map;

import android.content.ContentResolver;
import android.database.Cursor;
import android.net.Uri;

import com.slart.ttracker.database.TrackContentProvider;
import com.slart.ttracker.database.TrackTable;

public class DbUtil {
	
	public static Uri buildUri(Long id) {
		return Uri.parse(TrackContentProvider.CONTENT_URI + "/" + id);	
	}
	
	public static Map<String, Object> fetchTrack(Long id, ContentResolver cr) {

		Cursor cursor = cr.query(buildUri(id), TrackTable.getProjection(), null, null, null);
		
		Map<String, Object> result = new HashMap<String, Object>();

		if (cursor != null) {
			cursor.moveToFirst();
		}
		else {
			// TODO: Throw exception
		}
	
	}

}
